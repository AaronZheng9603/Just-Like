<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#E6FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="124dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/app_tv_latest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="@dimen/base_text_large"
            android:textColor="@drawable/app_sel_tv_menu"
            android:background="?android:attr/selectableItemBackground"
            android:textStyle="bold"
            android:text="最新"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_latest"
            tools:text="最新"/>

        <TextView
            android:id="@+id/app_tv_oldest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="@dimen/base_text_large"
            android:textColor="@drawable/app_sel_tv_menu"
            android:textStyle="bold"
            android:text="最久远"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_oldest"
            android:background="?android:attr/selectableItemBackground"
            tools:text="最久远"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>