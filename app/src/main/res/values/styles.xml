<resources>

    <!-- Customize splash image here. -->
    <style name="AppTheme.Splash">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/for_splash</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <!-- Customize MainImageActivity here. -->
    <style name="AppTheme.DisplayActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrey</item>
        <item name="colorPrimaryDark">@color/colorGreyDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="AppTheme.OnlineActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/snackBar</item>
        <item name="android:navigationBarColor">#000</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MatisseTheme" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="bottomToolbar.apply.textColor">@color/colorPrimary</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorPrimary</item>
        <item name="item.checkCircle.backgroundColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

</resources>
