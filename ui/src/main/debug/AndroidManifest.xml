<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aaron.ui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ui_ic_launcher"
        android:label="@string/ui_app_name"
        android:roundIcon="@mipmap/ui_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/UIAppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        tools:replace="icon, label, theme, android:allowBackup">
        <activity android:name="ui.debug.DialogActivity"
            android:theme="@style/UIDialogTheme"/>
        <activity android:name="ui.debug.NormalActivity" />
        <activity
            android:name="ui.debug.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>