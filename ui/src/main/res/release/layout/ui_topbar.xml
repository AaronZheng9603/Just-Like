<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ui_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    app:popupTheme="@style/UIOverflowMenu"
    app:layout_scrollFlags="scroll|enterAlways"
    tools:ignore="UnusedAttribute,RtlHardcoded">

    <Button
        android:id="@+id/ui_btn_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/ui_sel_btn_back_black"
        android:visibility="gone"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:id="@+id/ui_btn_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/ui_sel_btn_close_black"
        android:visibility="gone"
        style="?android:attr/borderlessButtonStyle" />

    <TextView
        android:id="@+id/ui_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/UITopbarText"
        tools:text="Just Like"/>

</androidx.appcompat.widget.Toolbar>