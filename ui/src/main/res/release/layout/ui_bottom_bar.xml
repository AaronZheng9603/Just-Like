<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/ui_view_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_black_divider_shallow" />

    <LinearLayout
        android:id="@+id/ui_ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white">

        <LinearLayout
            android:id="@+id/ui_ll_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <com.aaron.ui.widget.ImageTextView
                android:id="@+id/ui_itv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:textColor="@color/base_black" />

        </LinearLayout>

        <View
            android:id="@+id/ui_view_divider_item"
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/base_black_divider" />

        <LinearLayout
            android:id="@+id/ui_ll_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <com.aaron.ui.widget.ImageTextView
                android:id="@+id/ui_itv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:textColor="@color/base_black" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>