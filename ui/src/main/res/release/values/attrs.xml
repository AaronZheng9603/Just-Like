<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <!-- 自定义开屏广告进度条 -->
    <declare-styleable name="RoundProgressBar">
        <attr name="ringColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="ringWidth" format="dimension" />
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="maxProgress" format="integer" />
        <attr name="curProgress" format="integer" />
    </declare-styleable>

    <!-- 自定义带 icon 的 TextView -->
    <declare-styleable name="ImageTextView">
        <attr name="iconLeft" format="reference|color" />
        <attr name="iconRight" format="reference|color" />
        <attr name="iconTop" format="reference|color" />
        <attr name="iconBottom" format="reference|color" />
        <attr name="iconLeftTint" format="color" />
        <attr name="iconRightTint" format="color" />
        <attr name="iconTopTint" format="color" />
        <attr name="iconBottomTint" format="color" />
        <attr name="iconLeftWidth" format="dimension" />
        <attr name="iconLeftHeight" format="dimension" />
        <attr name="iconRightWidth" format="dimension" />
        <attr name="iconRightHeight" format="dimension" />
        <attr name="iconTopWidth" format="dimension" />
        <attr name="iconTopHeight" format="dimension" />
        <attr name="iconBottomWidth" format="dimension" />
        <attr name="iconBottomHeight" format="dimension" />
    </declare-styleable>

    <!-- 自定义带 icon 的 EditText -->
    <declare-styleable name="ImageEditText">
        <attr name="drawable" format="reference|color" />
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
        <attr name="drawableTint" format="color" />
    </declare-styleable>

    <!-- BottomBar -->
    <declare-styleable name="BottomBar">
        <attr name="rootBackground" format="reference|color" />
        <attr name="paddingRoot" format="dimension" />
        <attr name="dividerBackground" format="reference|color" />
        <attr name="itemDividerBackground" format="reference|color" />
        <attr name="leftText" format="string" />
        <attr name="leftIcon" format="reference|color" />
        <attr name="rightText" format="string" />
        <attr name="rightIcon" format="reference|color" />
        <attr name="iconWidth" format="dimension" />
        <attr name="iconHeight" format="dimension" />
        <attr name="iconPadding" format="dimension" />
        <attr name="iconTint" format="color" />
        <attr name="iconPosition">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="dividerVisible">
            <enum name="visible" value="0" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="itemDividerVisible">
            <enum name="visible" value="0" />
            <enum name="gone" value="8" />
        </attr>
    </declare-styleable>

    <!-- CollapseLayout -->
    <declare-styleable name="CollapseLayout">
        <attr name="collapseHeight" format="dimension" />
        <attr name="collapsePadding" format="dimension" />
        <attr name="collapsePaddingLeft" format="dimension" />
        <attr name="collapsePaddingTop" format="dimension" />
        <attr name="collapsePaddingRight" format="dimension" />
        <attr name="collapsePaddingBottom" format="dimension" />
        <attr name="title" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleStyle">
            <enum name="bold" value="1" />
        </attr>
        <attr name="drawableLeft" format="reference|color" />
        <attr name="drawableLeftWidth" format="dimension" />
        <attr name="drawableLeftHeight" format="dimension" />
        <attr name="drawableLeftPadding" format="dimension" />
        <attr name="drawableColor" format="color" />
        <attr name="duration" format="integer" />
        <attr name="expanded" format="boolean" />
    </declare-styleable>

    <!-- TopBar -->
    <declare-styleable name="TopBar">
        <attr name="string" format="string" />
        <attr name="stringSize" format="dimension" />
        <attr name="stringColor" format="color" />
        <attr name="stringStyle">
            <enum name="bold" value="1" />
        </attr>
        <attr name="backIcon" format="reference" />
        <attr name="backVisibility">
            <enum name="visible" value="0" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="closeVisibility">
            <enum name="visible" value="0"/>
            <enum name="gone" value="8"/>
        </attr>
    </declare-styleable>

    <!-- 支付密码框 -->
    <declare-styleable name="PwdInputView">
        <attr name="pwv_maxLength" format="integer" />

        <attr name="pwv_borderColor" format="color" />
        <attr name="pwv_pwdColor" format="color" />
        <attr name="pwv_haveInputBorderColor" format="color" />

        <attr name="pwv_strokeWidth" format="dimension" />
        <attr name="pwv_radius" format="dimension" />
        <attr name="pwv_spacing" format="dimension" />
        <attr name="pwv_asterisk" format="string" />

        <attr name="pwv_borderStyle" format="enum">
            <enum name="box" value="0" />
            <enum name="line" value="1" />
        </attr>
        <attr name="pwv_pwdStyle" format="enum">
            <enum name="circle" value="0" />
            <enum name="asterisk" value="1" />
            <enum name="plaintext" value="2" />
        </attr>
    </declare-styleable>

</resources>