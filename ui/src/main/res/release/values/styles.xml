<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 弹出菜单，弹出后菜单在按钮的下方 -->
    <style name="UIOverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:textColor">@color/base_black</item>
    </style>

    <!-- 标题栏文字主题 -->
    <style name="UITopbarText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/base_text_hlarge</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="UIBottomDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/ui_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/ui_dialog_exit</item>
    </style>

